RUN git clone https://github.com/mezuro/kalibro_gatekeeper.git <%= c['ruby.gatekeeper_app_path'] %>
RUN bash -l -c "cd <%= c['ruby.gatekeeper_app_path'] %> && rvm install $(cat '<%= c['ruby.gatekeeper_app_path'] %>/.ruby-version')"
RUN bash -l -c "gem install bundler"
RUN bash -l -c "cd <%= c['ruby.mezuro_app_path'] %> && bundle install" 
