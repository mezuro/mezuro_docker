#!/bin/bash

GATEKEEPER_PATH=/home/mezuro/kalibro_gatekeeper
GATEKEEPER_PIDFILE="$GATEKEEPER_PATH/gatekeeper.pid"

set -e

if [ -e "$PIDFILE" ]; then
	echo "Kalibro Gatekeeper is already running"
	exit 2
end

service start postgresql
service start tomcat6

cd "$GATEKEEPER_PATH" \
 && bundle install -j4 \
 && bundle exec rails s -d -p 8081 --pid "$PIDFILE"
