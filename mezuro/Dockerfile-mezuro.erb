<%= Git::import_or_clone(c['ruby.mezuro_app_path'],
                         'https://github.com/mezuro/mezuro.git') %>

RUN bash -l -c 'cd <%= c['ruby.mezuro_app_path'] %> && rvm install ./.ruby-version'
RUN bash -l -c 'cd <%= c['ruby.mezuro_app_path'] %> && gem install bundler && bundle install -j4'

ADD mezuro_setup.sh <%= c['ruby.mezuro_app_path'] %>/setup.sh
ADD mezuro_start.sh <%= c['ruby.mezuro_app_path'] %>/start.sh
