ONBUILD <%= Git::import_or_clone(c['ruby.gatekeeper_app_path'],
                                 'https://github.com/mezuro/kalibro_gatekeeper.git') %>

ONBUILD RUN bash -l -c "cd <%= c['ruby.gatekeeper_app_path'] %> && rvm install $(cat .ruby-version)"
ONBUILD RUN bash -l -c "cd <%= c['ruby.gatekeeper_app_path'] %> && gem install bundler && bundle install"