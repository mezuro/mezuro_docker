ADD gatekeeper_checkout.sh /home/mezuro/
RUN sudo -u mezuro -- /home/mezuro/gatekeeper_checkout.sh
RUN sudo -u mezuro -- sh -c 'cd /home/mezuro/kalibro_gatekeeper; rvm install $(cat .ruby-version)'
RUN sudo -u mezuro -- sh -c 'cd /home/mezuro/kalibro_gatekeeper; gem install bundler && bundle install -j4'

<%= docker.copy_tmpl('gatekeeper_setup.sh.erb',
                     '/home/mezuro/gatekeeper_setup.sh') %>
<%= docker.copy_tmpl('gatekeeper_start.sh.erb',
                     '/home/mezuro/gatekeeper_start.sh') %>
